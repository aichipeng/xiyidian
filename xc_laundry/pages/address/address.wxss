.btn {
    padding: 20rpx;
    text-align: center;
    color: #ffa64d;
    background: #fff;
}

.list .item {
    margin-top: 10rpx;
    background: #fff;
}

.list .item .item_top {
    padding: 20rpx;
    position: relative;
    display: flex;
}

.list .item .item_top>image {
    width: 100rpx;
    height: 100rpx;
}

.list .item .item_top>view:nth-child(2) {
    flex: 1;
    margin-left: 20rpx;
}

.list .item .item_top view>view:nth-child(2) {
    color: #333;
    margin-top: 20rpx;
    font-size: 3.5vw;
}

.list .item .item_top .mobile {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.list .item .item_btn {
    padding: 20rpx;
    display: flex;
    align-items: center;
    border-top: #ddd 2rpx solid;
}

.list .item .item_btn>icon {
    display: flex;
    align-items: center;
}

.list .item .item_btn>view:nth-child(2) {
    flex: 1;
    color: #ff4c60;
    margin-left: 10rpx;
}

.list .item .item_btn>view:nth-child(3) {
    display: flex;
    color: #999;
}

.list .item .item_btn>view:nth-child(3) view {
    padding: 0 20rpx;
}

.list .item .item_btn>view:nth-child(3) view+view {
    border-left: #ddd 2rpx solid;
}

.menu {
    position: fixed;
    width: 80vw;
    left: 10vw;
    top: 20%;
    background: #fff;
    z-index: 9999;
    padding: 40rpx 20rpx;
    box-sizing: border-box;
    border-radius: 40rpx;
    text-align: center;
}

.menu>icon {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    z-index: 9999;
}

.menu .menu_item {
    padding: 20rpx 40rpx;
    text-align: center;
    border-bottom: #ddd 2rpx solid;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.menu .menu_item>input {
    width: 100%;
}

.menu .menu_item>image {
    width: 53rpx;
    height: 53rpx;
}

.menu .menu_item>view {
    margin: 0 40rpx;
    color: #aaaaaa;
}

.menu .menu_item>.map {
    position: absolute;
    right: 0;
    width: 50rpx;
    height: 50rpx;
    top: 50%;
    transform: translate(0,-50%);
}

.menu .menu_btn {
    background: #aaaaaa;
    color: #fff;
    text-align: center;
    display: inline-block;
    margin-top: 40rpx;
    width: 360rpx;
    padding: 10rpx 0;
    border-radius: 40rpx;
}

.shadow {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #000;
    opacity: 0.5;
}