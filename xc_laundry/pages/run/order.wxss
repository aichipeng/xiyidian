@import "../common/common.wxss";

.list {
    background: #fff;
    padding: 0 20rpx;
}

.list .order {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    position: relative;
}

.list .order .pay_type {
    position: absolute;
    top: 0;
    left: -20rpx;
    display: block;
    width: 50rpx;
    height: 50rpx;
}

.list .order+.order {
    border-top: #ddd 2rpx solid;
}

.list .order>view:nth-child(1) {
    color: #FDA526;
    padding-right: 10rpx;
    border-right: #ddd 2rpx dashed;
    width: 120rpx;
}

.list .order .order_content {
    flex: 1;
    margin-left: 10rpx;
    width: 500rpx;
}

.list .order .order_content .order_item {
    display: flex;
}

.list .order .order_content .order_item>view:nth-child(1) {
    color: #aaaaaa;
}

.list .order .order_content .order_item>view:nth-child(2) {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
}

.list .order .order_btn {
    background: #12B8F6;
    color: #fff;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.list .order .order_btn+.order_btn {
    margin-left: 10rpx;
}

.list .item {
    margin-top: 10rpx;
    background: #fff;
    padding: 20rpx;
}

.list .item .item_top {
    padding-bottom: 20rpx;
}

.list .item .middle_item {
    display: flex;
}

.list .item .middle_item>image {
    width: 40rpx;
    height: 40rpx;
    display: flex;
    margin-left: 10rpx;
}

.list .item .middle_item>view:nth-child(1) {
    color: #aaaaaa;
    width: 160rpx;
}

.list .item .middle_item>view:nth-child(2) {
    flex: 1;
}

.list .item_middle {
    padding: 20rpx 0;
    border-top: #ddd 2rpx solid;
    border-bottom: #ddd 2rpx solid;
}

.list .middle_item+.middle_item {
    margin-top: 10rpx;
}

.list .item .item_btn {
    display: flex;
    margin-top: 20rpx;
}

.list .item .item_btn>view:nth-child(1) {
    flex: 1;
    color: #aaaaaa;
}

.list .item .item_btn .order_status {
    padding: 10rpx 40rpx;
    background: #12b8f6;
    color: #fff;
    border-radius: 10rpx;
}

.list .item .item_btn .order_status+.order_status {
    margin-left: 10rpx;
}