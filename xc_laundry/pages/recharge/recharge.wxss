.top {
    background: #12b8f6;
    position: relative;
    height: 40vw;
    color: #fff;
}

.top .card {
    width: 90%;
    top: 5vw;
    left: 5%;
    height: 45vw;
    position: absolute;
}

.top .card>image {
    width: 100%;
    height: 100%;
    display: block;
}

.top .tip1 {
    position: absolute;
    bottom: 20rpx;
    left: 40rpx;
}

.top .tip2 {
    position: absolute;
    right: 40rpx;
    bottom: 20rpx;
}

.top .tip3 {
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,0);
}

.top .tip3>view:nth-child(1) {
    font-size: 5vw;
    color: #FFFF00;
}

.top_block {
    height: 10vw;
}

.list {
    background: #fff;
    margin-top: 20rpx;
    padding: 2vw;
}

.list .content {
    overflow: hidden;
}

.list .content .item {
    float: left;
    width: 42vw;
    margin: 0 2vw 20rpx;
    display: flex;
    padding: 20rpx 0;
    justify-content: center;
    border: #ddd 2rpx solid;
    border-radius: 20rpx;
    position: relative;
}

.list .content .item>view:nth-child(1) {
    font-size: 6vw;
    color: #aaa;
}

.list .content .item>view:nth-child(2) {
    color: #12b8f6;
    position: absolute;
    bottom: 2vw;
    right: 2vw;
}

.list .btn {
    background: #12b8f6;
    color: #fff;
    text-align: center;
    padding: 10rpx 0;
    font-size: 5vw;
    margin: 20rpx 20%;
    border-radius: 40rpx;
}