.list {
    background: #fff;
    padding: 0 20rpx;
}

.list .item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.list .item+.item {
    border-top: #ddd 2rpx solid;
}

.list .item .menu_num {
    display: flex;
    align-items: center;
    border: #999999 2rpx solid;
    border-radius: 40rpx;
}

.list .item .menu_num>view {
    padding: 4rpx 10rpx;
}

.list .item .menu_num>view:nth-child(2) {
    color: #000;
}

.list .item .menu_num>view:nth-child(3) {
    font-size: 5vw;
}

.list .item icon {
    display: flex;
    align-items: center;
}

.list .item>view:nth-child(2) {
    margin-left: 20rpx;
    flex: 1;
}

.list .item>view:nth-child(3) {
    display: flex;
    align-items: center;
}

.bottom_block {
    height: 100rpx;
}

.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    display: flex;
    align-items: center;
    font-size: 4vw;
    height: 100rpx;
}

.bottom icon {
    display: flex;
    align-items: center;
    margin: 0 20rpx;
}

.bottom>view:nth-child(2) {
    color: #cccccc;
    flex: 1;
}

.bottom>view:nth-child(3) {
    color: #FF7F00;
}

.bottom>view:nth-child(4) {
    background: #12b8f6;
    padding: 0 40rpx;
    height: 100%;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
}