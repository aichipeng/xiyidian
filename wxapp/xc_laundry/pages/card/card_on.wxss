.top {
    background: #12b8f6;
    position: relative;
    height: 40vw;
    color: #fff;
}

.top .card {
    width: 90%;
    top: 5vw;
    left: 5%;
    height: 45vw;
    position: absolute;
}

.top .card>image {
    width: 100%;
    height: 100%;
    display: block;
}

.top .tip1 {
    position: absolute;
    bottom: 20rpx;
    left: 40rpx;
}

.top .tip2 {
    position: absolute;
    right: 40rpx;
    bottom: 20rpx;
}

.top .tip3 {
    text-align: center;
    position: absolute;
    top: 58%;
    left: 50%;
    transform: translate(-50%,0);
}

.top .tip3>view:nth-child(1) {
    font-size: 5vw;
    color: #FFFF00;
}

.top_block {
    height: 10vw;
}

.list {
    background: #fff;
    margin-top: 20rpx;
    padding: 0 20rpx;
}

.list .item {
    padding: 20rpx 0;
    display: flex;
    color: #858585;
}

.list .item+.item {
    border-top: #ddd 2rpx solid;
}

.list .item>image {
    width: 40rpx;
    height: 40rpx;
    display: block;
    margin-right: 10rpx;
}

.list .item>view:nth-child(2) {
    flex: 1;
}

.ad {
    background: #fff;
    padding: 20rpx;
    margin-top: 10rpx;
}

.ad>view:nth-child(1) {
    color: #12b8f6;
    text-align: center;
    font-size: 4.5vw;
    margin: 0 20%;
    padding-bottom: 20rpx;
    border-bottom: #12b8f6 2rpx solid;
}

.ad .content {
    margin-top: 20rpx;
    padding: 0 20rpx;
    color: #aaa;
}