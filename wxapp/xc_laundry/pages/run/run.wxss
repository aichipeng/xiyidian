@import "../common/common.wxss";

.top {
    background: #12b8f6;
    padding: 20rpx;
    text-align: center;
    color: #fff;
}

.top>image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 100%;
}

.nav {
    background: #fff;
    display: flex;
    position: relative;
}

.nav .nav_item {
    flex: 1;
    text-align: center;
    color: #aaaaaa;
    padding: 20rpx 0;
}

.nav .nav_item>view:nth-child(1) {
    color: #12B8F6;
    font-size: 5vw;
}

.nav .nav_btn {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.nav .nav_btn>view {
    border: #ddd 2rpx solid;
    border-radius: 10rpx;
    font-size: 3vw;
    line-height: 4.5vw;
    padding: 0 10rpx;
}

.nav .nav_btn view+view {
    margin-top: 10rpx;
}

.list {
    margin-top: 10rpx;
    padding: 0 20rpx;
    background: #fff;
}

.list .item {
    display: flex;
    padding: 20rpx 0;
}

.list .item+.item {
    border-top: #ddd 2rpx solid;
}

.list .item>view:nth-child(1) {
    flex: 1;
    color: #aaaaaa;
}