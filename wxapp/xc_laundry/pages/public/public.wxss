.search {
    background: #12b8f6;
    width: 100%;
    height: 100rpx;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.search .search_box {
    background: #fff;
    display: flex;
    border-radius: 10rpx;
    width: 100%;
}

.search .search_box input {
    flex: 1;
    text-align: center;
}

.search .search_box icon {
    display: flex;
    align-items: center;
    margin: 0 20rpx;
}

.search_block {
    height: 100rpx;
}

.nav {
    background: #fff;
    white-space: nowrap;
    height: 164rpx;
    position: fixed;
    top: 100rpx;
    left: 0;
    width: 100%;
}

.nav .nav_item {
    width: 20%;
    text-align: center;
    color: #777777;
    display: inline-block;
    padding: 20rpx 0;
}

.nav .nav_item>image {
    width: 80rpx;
    height: 80rpx;
}

.nav_block {
    height: 164rpx;
}

.list {
    background: #fff;
    margin-top: 10rpx;
}

.list .item {
    padding: 20rpx;
    display: flex;
    align-items: center;
}

.list .item:nth-child(2n) {
    background: #f9f9f9;
}

.list .item+.item {
    border-top: #ddd 2rpx dashed;
}

.list .item>image {
    width: 50rpx;
    height: 50rpx;
}

.list .item>view:nth-child(1) {
    width: 40%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item>view:nth-child(2) {
    flex: 1;
    color: #999999;
}

.list .item .price {
    color: #12b8f6;
}

.bottom_block {
    height: 100rpx;
}

.bottom {
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
    height: 100rpx;
}

.bottom>image {
    width: 60rpx;
    height: 60rpx;
    display: block;
    padding: 0 20rpx;
}

.bottom>view:nth-child(2) {
    color: #12b8f6;
    font-size: 4.5vw;
    flex: 1;
}

.bottom>view:nth-child(3) {
    background: #12b8f6;
    color: #fff;
    text-align: center;
    padding: 0 40rpx;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 5vw;
}